generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  name      String?    @default("Anonymous")
  password  String?
  role      Role       @default(USER)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Expenses  Expenses[]
  Budget    Budget[]
}

enum Category {
  Food
  Transportation
  Shopping
  Entertainment
  Other
}

model Expenses {
  id        String   @id @default(cuid())
  amount    Int
  category  Category
  date      DateTime
  tags      String[]
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

model Budget {
  id             String   @id @default(cuid())
  userId         String
  user           User     @relation(fields: [userId], references: [id])
  month          DateTime
  total_limit    Int
  category_limit Json
  createdAt      DateTime @default(now())
}
